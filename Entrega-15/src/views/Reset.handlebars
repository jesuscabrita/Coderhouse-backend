<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Cambio de contraseña</p>
                                <form class="mx-1 mx-md-4" id="changePasswordForm">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input name="current_password" type="password" id="form3Example4c"
                                                class="form-control" placeholder="Contraseña actual" />
                                            <label class="form-label" for="form3Example4c">Contraseña actual</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input name="userId" type="password" id="form3Example5c"
                                                class="form-control" placeholder="Nueva contraseña" />
                                            <label class="form-label" for="form3Example5c">Nueva contraseña</label>
                                            <div class="font-weight-bold text-danger" id="error"></div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Cambiar contraseña</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                    class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="spinner" class="text-center" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
</section>

<script>
    // Agrega el evento de escucha al formulario por su ID
    document.getElementById("changePasswordForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Prevenir la recarga de la página

        // Obtener los valores de los campos
        const currentPassword = document.getElementById("form3Example4c").value;
        const newPassword = document.getElementById("form3Example5c").value;

        // ID de usuario
        const userId = "6462ac753a48566a4130bd56";

        // Objeto con los datos a enviar en el cuerpo (body) de la petición
        const data = {
            current_password: currentPassword,
            newPassword: newPassword,
            userId: userId,
        };

        // Mostrar el spinner
        document.getElementById("spinner").style.display = "block";

        // Realizar la petición POST usando fetch
        fetch("http://localhost:8080/api/sessions/cambiar", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
        })
            .then((response) => {
                // Ocultar el spinner
                document.getElementById("spinner").style.display = "none";

                if (response.ok) {
                    // La respuesta fue exitosa, redirigir a la página deseada
                    window.location.href = "http://localhost:8080/login";
                } else {
                    // La respuesta tuvo un error, mostrar mensaje de error en rojo
                    response.json().then((data) => {
                        document.getElementById("error").innerText = data.error;
                        document.getElementById("error").style.color = "red";
                    });
                }
            })
            .catch((error) => {
                // Manejar errores de la petición
                console.error("Error:", error);

                // Ocultar el spinner en caso de error
                document.getElementById("spinner").style.display = "none";

                // Mostrar mensaje de error genérico en rojo
                document.getElementById("error").innerText = "Error en la petición. Por favor, intenta nuevamente.";
                document.getElementById("error").style.color = "red";
            });
    });
</script>